# =============================================================================
# TINYWEB SEO CONFIGURATION - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and update with your actual values

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=https://tinyweb.tools
NEXT_PUBLIC_SITE_NAME="TinyWeb - Free SEO Tools"
NEXT_PUBLIC_SITE_DESCRIPTION="Professional-grade SEO analysis tools for free. Complete toolkit with 11+ tools for meta tags, OpenGraph, headers, sitemaps, SERP tracking, and more. Trusted by 10,000+ SEO professionals worldwide."

# =============================================================================
# SEO & ANALYTICS
# =============================================================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Search Console Verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your-google-verification-code

# Bing Webmaster Tools
NEXT_PUBLIC_BING_SITE_VERIFICATION=your-bing-verification-code

# Yandex Webmaster
NEXT_PUBLIC_YANDEX_VERIFICATION=your-yandex-verification-code

# Yahoo Site Explorer
NEXT_PUBLIC_YAHOO_VERIFICATION=your-yahoo-verification-code

# =============================================================================
# SOCIAL MEDIA
# =============================================================================
NEXT_PUBLIC_TWITTER_HANDLE=@tinyweb_tools
NEXT_PUBLIC_FACEBOOK_PAGE=https://facebook.com/tinyweb.tools
NEXT_PUBLIC_LINKEDIN_PAGE=https://linkedin.com/company/tinyweb-tools
NEXT_PUBLIC_GITHUB_URL=https://github.com/tinyweb-tools
NEXT_PUBLIC_YOUTUBE_CHANNEL=https://youtube.com/@tinyweb-tools

# =============================================================================
# CONTACT & BUSINESS INFO
# =============================================================================
NEXT_PUBLIC_CONTACT_EMAIL=support@tinyweb.tools
NEXT_PUBLIC_BUSINESS_EMAIL=hello@tinyweb.tools
NEXT_PUBLIC_SUPPORT_EMAIL=help@tinyweb.tools

# Business Address (for Local SEO Schema)
NEXT_PUBLIC_BUSINESS_NAME="TinyWeb SEO Tools"
NEXT_PUBLIC_BUSINESS_ADDRESS="123 SEO Street"
NEXT_PUBLIC_BUSINESS_CITY="Digital City"
NEXT_PUBLIC_BUSINESS_STATE="Tech State"
NEXT_PUBLIC_BUSINESS_ZIP="12345"
NEXT_PUBLIC_BUSINESS_COUNTRY="US"
NEXT_PUBLIC_BUSINESS_PHONE="+1-555-SEO-TOOL"

# Geographic Coordinates (for Local SEO)
NEXT_PUBLIC_BUSINESS_LATITUDE=40.7128
NEXT_PUBLIC_BUSINESS_LONGITUDE=-74.0060

# =============================================================================
# BRANDING & ASSETS
# =============================================================================
NEXT_PUBLIC_LOGO_URL=/logo.png
NEXT_PUBLIC_FAVICON_URL=/favicon.ico
NEXT_PUBLIC_OG_IMAGE=/og-image.png
NEXT_PUBLIC_TWITTER_IMAGE=/twitter-image.png

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================
# Uptime Monitoring
NEXT_PUBLIC_UPTIME_ROBOT_ID=your-uptime-robot-id

# Performance Monitoring
NEXT_PUBLIC_PAGESPEED_API_KEY=your-pagespeed-api-key

# Error Tracking (Sentry, LogRocket, etc.)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_LOGROCKET_APP_ID=your-logrocket-app-id

# =============================================================================
# MARKETING & CONVERSION
# =============================================================================
# Email Newsletter (Mailchimp, ConvertKit, etc.)
NEXT_PUBLIC_NEWSLETTER_API_KEY=your-newsletter-api-key
NEXT_PUBLIC_MAILCHIMP_LIST_ID=your-mailchimp-list-id

# Live Chat (Intercom, Crisp, etc.)
NEXT_PUBLIC_INTERCOM_APP_ID=your-intercom-app-id
NEXT_PUBLIC_CRISP_WEBSITE_ID=your-crisp-website-id

# =============================================================================
# API CONFIGURATIONS
# =============================================================================
# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=3600

# API Keys for Tools
PAGESPEED_API_KEY=your-pagespeed-insights-api-key
SERP_API_KEY=your-serp-api-key
SOCIAL_MEDIA_API_KEY=your-social-media-api-key

# =============================================================================
# DEVELOPMENT & STAGING
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production

# Staging URLs (for testing)
NEXT_PUBLIC_STAGING_URL=https://staging.tinyweb.tools
NEXT_PUBLIC_DEV_URL=http://localhost:3000

# =============================================================================
# SECURITY
# =============================================================================
# CORS Origins
NEXT_PUBLIC_ALLOWED_ORIGINS=https://tinyweb.tools,https://www.tinyweb.tools

# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI=https://tinyweb.tools/api/csp-report

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_LIVE_CHAT=true
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_API_DOCS=true

# =============================================================================
# DEPLOYMENT INFO
# =============================================================================
NEXT_PUBLIC_BUILD_DATE=2024-01-01
NEXT_PUBLIC_VERSION=2.0.0
NEXT_PUBLIC_COMMIT_SHA=abc123def456
